<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList include="animations.xml">

	<name>FlightDeck</name>
	<path>flightdeck.ac</path>
	
	<!-- Animations are included in the separate animations.xml file -->
	
	<model>
		<name>OHPanel</name>
		<path>Aircraft/ATR72/Models/FlightDeck/ohpanel.xml</path>
		<offsets>
			<x-m>-10.8947</x-m>
			<y-m>0</y-m>
			<z-m>1.373</z-m>
			<pitch-deg>70</pitch-deg>
		</offsets>
	</model>
	
	<model>
		<name>EADI</name>
		<path>Aircraft/ATR72/Models/Instruments/EADI/eadi.xml</path>
		<condition>
			<equals>
				<property>/systems/electric/outputs/avionics</property>
				<value>1</value>
			</equals>
		</condition>
		<offsets>
			<x-m>-11.2991</x-m>
			<y-m>-0.5730</y-m>
			<z-m>0.6682</z-m>
			<pitch-deg>-10</pitch-deg>
		</offsets>
	</model>
		
</PropertyList>
