<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>landing.ac</path>

	<animation>
		<name>On/off</name>
		<type>select</type>
		<object-name>Light</object-name>
		<object-name>Cone</object-name>
		<condition>
			<property>/controls/lighting/taxi</property>
		</condition>
	</animation>
	<animation>
		<name>Cone on/off</name>
		<type>select</type>
		<object-name>Cone</object-name>
		<condition>
			<property>/controls/lighting/taxi</property>
		</condition>
	</animation>

	<animation>
		<name>Landing light steer</name>
		<type>rotate</type>
		<object-name>Light</object-name>
		<object-name>Cone</object-name>
		<property>/gear/gear[0]/steering-norm</property>
		<factor>60</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
	</animation>

	<effect>
		<inherits-from>Effects/light-cone</inherits-from>
		<object-name>Cone</object-name>
		<object-name>Cone-texture</object-name>
	</effect>

</PropertyList>
