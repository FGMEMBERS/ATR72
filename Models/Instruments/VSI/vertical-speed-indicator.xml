<?xml version="1.0"?>

<PropertyList>

	<path>vertical-speed-indicator.ac</path>
	
	<animation>
    	<type>rotate</type>
    	<object-name>vsi-needle</object-name>
    	<property>/velocities/vertical-speed-fps</property>
    	<interpolation>
			<entry>
				<ind>-100</ind>
				<dep>-180</dep>
			</entry>
			<entry>
				<ind>-33.33</ind>
				<dep>-108</dep>
			</entry>
			<entry>
				<ind>-16.67</ind>
				<dep>-72</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep></dep>
			</entry>
			<entry>
				<ind>16.67</ind>
				<dep>72</dep>
			</entry>
			<entry>
				<ind>33.33</ind>
				<dep>108</dep>
			</entry>
			<entry>
				<ind>100</ind>
				<dep>180</dep>
			</entry>
    	</interpolation>
    	<axis>
    		<x>-1</x>
    		<y>0</y>
    		<z>0</z>
    	</axis>
    </animation>

	<animation>
		<type>material</type>
		<object-name>vsi-needle</object-name>
		<object-name>faceplate</object-name>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</diffuse>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</emission>
		<condition>
			<not>
				<property>/systems/electric/outputs/avionics</property>
			</not>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>vsi-needle</object-name>
		<object-name>faceplate</object-name>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</diffuse>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</emission>
		<condition>
			<property>/systems/electric/outputs/avionics</property>
		</condition>
	</animation>	

	
</PropertyList>
